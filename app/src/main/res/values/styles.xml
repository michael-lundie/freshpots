<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme of the editor -->
    <style name="EditorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<item name="colorPrimary">@color/editorColorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/editorColorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for a counter button -->
    <style name="CounterButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/circle_solid</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for an Counter TextView -->
    <style name="CounterTextViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for a category in the editor -->
    <style name="CategoryStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/rounded_right_solid_overview</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for the category detail views in the editor -->
    <style name="DetailTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/rounded_left_solid_details</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for an EditText field in the editor -->
    <style name="EditorFieldStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for the measurement units for an EditText field in the editor -->
    <style name="EditorUnitsStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for a dialogue title -->
    <style name="DialogStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/rounded_bottom_dialogue_title</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
    <!-- Style for a dialogue counter layout -->
    <style name="DialogCounterLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
    </style>

    <!-- Style for rounded button -->
    <style name="RoundedButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="RoundedButtonGreen" parent="RoundedButton">
        <item name="android:background">@drawable/rounded_solid_button_green</item>
    </style>

    <style name="RoundedButtonBlue" parent="RoundedButton">
        <item name="android:background">@drawable/rounded_solid_button_gray</item>
    </style>


    <style name="ButtonImpact" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/secondaryDarkColor</item>
        <item name="colorButtonNormal">@color/secondaryLightColor</item>
    </style>

    <style name="ButtonBorder" parent="Theme.AppCompat.Light">

        <item name="android:background">@drawable/border_button</item>
    </style>

</resources>
